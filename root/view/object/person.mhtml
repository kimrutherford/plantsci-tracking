<%args>
$object
</%args>

<& /view/object/object_top.mhtml, object => $object, 
  field_labels => [qw(username organisation first_name last_name)] &>

<div id="collections">
  <& /view/collection.mhtml, object => $object, collection_title => 'Projects',
    collection_name => 'pipeprojects', disclosed => 1 &>
  <& /view/list.mhtml, type => 'Sample', rs => $samples_rs,
    list_title => "The sample$sample_plu from all projects" &>
</div>
  
<%init>
my $samples_rs = 
  $object->search_related('pipeprojects')->search_related('sample_pipeprojects')->search_related('sample');
my $samples_count = $samples_rs->count();
my $sample_plu = ($samples_count != 1) ? 's' : '';
</%init>

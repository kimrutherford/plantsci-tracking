<%args>
$object
$type
</%args>

<div>
<& /view/field_list.mhtml, object => $object, field_labels =>
  [qw(name description type owner funder)] &>
</div>

<div>
  <& /view/list.mhtml, type => 'sample', rs => $samples_rs,
    list_title => "The sample$sample_plu for this project" &>
</div>

<div>
  <a href="<% $c->uri_for('/new/object/sample', { 'pipeproject.id' => $object->pipeproject_id() }) %>">
    Create a sample for this project
  </a>
</div>

<%init>
my $samples_rs = $object->samples();
my $samples_count = $samples_rs->count();
my $sample_plu = ($samples_count != 1) ? 's' : '';
</%init>

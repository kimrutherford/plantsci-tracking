<%args>
$object
</%args>

<div>
<& /view/field_list.mhtml, object => $object, field_labels => [qw|name|] &>
</div>

<div id="collections">
  <& /view/collection.mhtml, object => $object, collection_name => 'coded_samples',
    collection_title => "The coded samples for this sequencing sample" &>
  <& /view/collection.mhtml, object => $object, collection_name => 'sequencingruns',
    collection_title => "The sequencing runs for this sequencing sample" &>
  <& /view/list.mhtml, type => 'biosample', rs => $biosamples_rs,
    list_title => "The biosample$biosamples_plu in this sequencing sample" &>
</div>

<%init>
my $biosamples_rs = $object->coded_samples()->search_related('biosample');
my $biosamples_count = $biosamples_rs->count();
my $biosamples_plu = ($biosamples_count != 1) ? 's' : '';
</%init>
